# K-IRC Configuration
# Copy this file to .env and fill in your values

# Kafka Configuration (from Aiven Console)
KAFKA_BOOTSTRAP_SERVERS=your-kafka-host:port
KAFKA_SECURITY_PROTOCOL=SSL
KAFKA_SSL_CAFILE=./certs/kafka_ca.pem
KAFKA_SSL_CERTFILE=./certs/kafka_service.cert
KAFKA_SSL_KEYFILE=./certs/kafka_service.key

# Kafka Topics
KAFKA_TOPIC_DATA_IN=data-in
KAFKA_TOPIC_DATA_OUT=data-out
KAFKA_TOPIC_RPC_IN=rpc-in
KAFKA_TOPIC_RPC_OUT=rpc-out

# PostgreSQL Configuration (from Terraform output)
# Run: terraform output -raw pg_service_uri
POSTGRES_URI=postgresql://user:password@host:port/kirc_config?sslmode=require

# Valkey/Redis Configuration (from Terraform output)
# Run: terraform output -raw valkey_service_uri
VALKEY_URI=rediss://default:password@host:port

# User Profile
KIRC_USERNAME=your-username
KIRC_DISPLAY_NAME=Your Display Name
