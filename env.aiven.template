# Aiven Service Configuration for K-IRC
# Fill in these values after running 'terraform apply'
# Copy this file to .env.aiven and fill in the details.

# PostgreSQL
KIRC_POSTGRES__URI=postgres://avnadmin:PASSWORD@HOST:PORT/defaultdb?sslmode=require

# Valkey
KIRC_VALKEY__URI=rediss://default:PASSWORD@HOST:PORT

# Kafka (Aiven SASL_SSL)
KIRC_KAFKA__BOOTSTRAP_SERVERS=kafka-kirc-ververica-65ab.c.aivencloud.com:16760
KIRC_KAFKA__SECURITY_PROTOCOL=SASL_SSL
KIRC_KAFKA__SASL_MECHANISM=SCRAM-SHA-256
KIRC_KAFKA__SASL_PLAIN_USERNAME=avnadmin
KIRC_KAFKA__SASL_PLAIN_PASSWORD=PASSWORD
KIRC_KAFKA__SSL_CAFILE=./certs/ca.pem
